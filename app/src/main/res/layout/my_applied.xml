<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Title: "
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleContentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="This is a title"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/titleTV"
        app:layout_constraintTop_toTopOf="@id/titleTV" />

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Date:"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/titleTV"
        app:layout_constraintTop_toBottomOf="@id/titleTV" />

    <TextView
        android:id="@+id/dateContentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022/12/01 - 2022/12/12"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/titleContentTV"
        app:layout_constraintTop_toTopOf="@+id/dateTV" />

    <TextView
        android:id="@+id/hostTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Host:"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/titleTV"
        app:layout_constraintTop_toBottomOf="@id/dateTV" />

    <TextView
        android:id="@+id/hostContentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jane Doe(janedoe@gmail.com)"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/titleContentTV"
        app:layout_constraintTop_toTopOf="@+id/hostTV" />

    <TextView
        android:id="@+id/statusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="pending"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleTV" />

    <TextView
        android:id="@+id/reviewTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write_review"
        android:textSize="15sp"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="@id/statusTV"
        app:layout_constraintTop_toTopOf="@+id/dateTV" />


</androidx.constraintlayout.widget.ConstraintLayout>