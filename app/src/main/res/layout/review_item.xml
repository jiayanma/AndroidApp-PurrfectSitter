<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/reviewerPhotoIV"
        android:layout_width="140dp"
        android:layout_height="105dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.001"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_home" />

    <TextView
        android:id="@+id/reviewerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/reviewerPhotoIV"
        app:layout_constraintStart_toStartOf="@+id/reviewerPhotoIV"
        app:layout_constraintTop_toBottomOf="@+id/reviewerPhotoIV" />

    <TextView
        android:id="@+id/reviewContentTV"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Review Text"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/reviewerPhotoIV"
        app:layout_constraintStart_toEndOf="@+id/reviewerPhotoIV" />

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviewed on "
        android:textSize="8sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/reviewContentTV"
        app:layout_constraintTop_toBottomOf="@+id/reviewContentTV" />

</androidx.constraintlayout.widget.ConstraintLayout>