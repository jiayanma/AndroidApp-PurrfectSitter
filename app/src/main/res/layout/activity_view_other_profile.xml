<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PurrfectSitter.Activities.ViewOtherProfileActivity">

    <ImageView
        android:id="@+id/otherAvatarIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/otherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/otherAvatarIV"
        app:layout_constraintStart_toEndOf="@+id/otherAvatarIV"
        app:layout_constraintTop_toTopOf="@+id/otherAvatarIV" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/otherProfileRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/otherAvatarIV"
        app:layout_constraintTop_toBottomOf="@+id/otherAvatarIV" />
</androidx.constraintlayout.widget.ConstraintLayout>